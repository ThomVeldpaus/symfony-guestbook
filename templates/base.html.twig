<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <header>
            {# Pagetitle is a link that redirects always back to the homepage #}
            <h1><a href="{{ path('homepage') }}">Guestbook</a></h1>
            <ul>
                {% for conference in conferences %}
                    {# Every conference will be a listitem link and displays the value of the __toString() function #}
                    {# The link will always redirect to the conference with the corresponding id #}
                    <li><a href="{{ path('conference', { id: conference.id}) }}">{{ conference }}</a></li>
                {% endfor %}
            </ul>
            <hr />
        </header>
        {% block body %}{% endblock %}
    </body>
</html>

